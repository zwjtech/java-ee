<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.changwen.hibernate.oneToOne.pojo.Department" table="DEPARTMENTS">

        <id name="deptId" type="java.lang.Integer">
            <column name="DEPT_ID" />
            <generator class="native" />
        </id>
        
        <property name="deptName" type="java.lang.String">
            <column name="DEPT_NAME" />
        </property>


        <!-- 使用 many-to-one 的方式来映射 1-1 关联关系 -->
        <many-to-one name="mgr" class="com.changwen.hibernate.oneToOne.pojo.Manager"
                     column="MGR_ID" unique="true"/>

    </class>
</hibernate-mapping>
